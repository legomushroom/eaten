// BLOCKS
@import '../assets/imports.styl'


.text
	fill white
	font-size 26px
	white-space nowrap
	font-family 'Offside'
	&--label
		font-size 13px




.svg-container
	padding-bottom 70.3125%
	position relative
	&__content
		position absolute
		rect 100%
		overflow hidden
		svg 
			rect 100%

@-moz-document url-prefix() {
	.text{
		font-family 'Open Sans'
	}
}